        height: 32px;
    }
    
    .twitter-card p,
    .twitter-card a {
        font-weight: 600;
        line-height: 1.6;
    }
    
    .twitter-card p {
        margin: 10px 0;
    }
    
    .twitter-card a {
        color: #0099ff;
    }
    
    .twitter-card .footer {
        height: 28px;
        margin-top: 10px;
    }
    
    .twitter-card .footer .icon {
        width: 50%;
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }
    
    .twitter-card .footer svg {
        transition: all 0.3s;
    }
    
    .twitter-card .footer svg:hover {
